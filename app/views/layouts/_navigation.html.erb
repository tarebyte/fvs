<div class="navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Actors Wanted', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to current_user.name, edit_user_registration_path  %>
          </li>
          <li>
            <% if current_user.admin? && currently_flagged.count > 0 %>
              <%= link_to flagged_path, class: 'flagged_count' do %>
                Flagged (<%= currently_flagged.count %>)
              <% end %>
            <% end %>
          </li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        <% else %>
          <li><%= link_to 'Login', new_user_session_path %></li>
          <li><%= link_to 'Get Started', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
